<body>
    <div class="container-fluid">

        <!-- Slider -->
        <div class="tp-banner-container">
            <div class="tp-banner">
                <ul>
                    <!-- SLIDE  -->
                    <li data-transition="fade" data-slotamount="7" data-masterspeed="1500">
                        <!-- MAIN IMAGE -->
                        <img src="/images/bg-01.jpg" alt="slidebg1" data-bgfit="cover" data-bgposition="left top" data-bgrepeat="no-repeat">
                        <!-- LAYERS -->
                    </li>
                </ul>
            </div>
        </div>
        <!-- //Slider -->

        <div class="headernav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-xs-3 col-sm-2 col-md-2 logo ">
                        <a href="/home">
                            <img src="/images/logo.jpg" alt="" />
                        </a>
                    </div>
                    <div class="col-lg-1 col-xs-9 col-sm-5 col-md-3 selecttopic">
                    </div>
                    <div class="col-lg-4 search hidden-xs hidden-sm col-md-3">
                        <div class="wrap">
                            <form action="/home/search" method="get" class="form">
                                <div class="pull-left txt">
                                    <input type="text" class="form-control" name="search" placeholder="Search Topics">
                                </div>
                                <div class="pull-right">
                                    <button class="btn btn-default" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xs-12 col-sm-5 col-md-4 avt">
                        <div class="stnt pull-left">
                            <form action="/addPost" method="post" class="form">
                                <button class="btn btn-primary">Start New Topic</button>
                            </form>
                        </div>
                        <div class="env pull-left" style="font-size: 12px;color: #2f3131;">
                            <%= user.username %>
                        </div>
                        <div class="avatar pull-left dropdown">
                            <a data-toggle="dropdown" href="#">
                                <img src="/images/avatar.jpg" alt="" />
                            </a>
                            <b class="caret"></b>
                            <div class="status green">&nbsp;</div>
                            <ul class="dropdown-menu" role="menu">
                                <li role="presentation">
                                    <a role="menuitem" tabindex="-2" href="/home">Home</a>
                                </li>
                                <li role="presentation">
                                    <a role="menuitem" tabindex="-3" href="/logout">Log Out</a>
                                </li>

                            </ul>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>